{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% block page_title %}Users{% endblock %}
{% block page_subtitle %}Lorem ipsum dolor sit amet{% endblock %}

{% block page_content %}
    <div class="box box-info">
        <div class="box-body">
            <table id="users" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>E-mail</th>
                    <th>Status</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
            {% for user in pagination %}
                <tr>
                    <td>
                        {{ user.id }}
                    </td>
                    <td>
                        {{ user.username }}
                    </td>
                    <td>
                        {{ user.firstName }}
                    </td>
                    <td>
                        {{ user.lastName }}
                    </td>
                    <td>
                        {{ user.email }}
                    </td>
                    <td>
                        {% if user.enabled == true %}
                            <span class="badge bg-green">Aktivan</span>
                        {% endif %}

                        {% if user.enabled == false %}
                            <span class="badge bg-red">Neaktivan</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('list_reservations', { 'id': user.id }) }}" alt="Reservations" title="Reservations"><i class="fa fa-list"></i></a>
                    </td>
                </tr>
            {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts
    '@admin_lte_all'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
