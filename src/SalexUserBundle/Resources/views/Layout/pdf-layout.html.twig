            <h1>
                {% block pdf_title %}Novosadsko pozorište{% endblock %}
            </h1>
        </section>

        <!-- Main content -->
        <section class="content">
            {% block pdf_content %}{% endblock %}
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

</div>
<!-- ./wrapper -->

</body>
</html>