{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% block page_title %}Reservations{% endblock %}
{% block page_subtitle %}Lorem ipsum dolor sit amet{% endblock %}

{% block page_content %}

    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Search</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <form method="get" action="{{ path('list_my_reservations') }}">
                {{ form_rest(form) }}
                <button class="btn-default btn" type="submit" name="submit-filter">
                    <i class="fa fa-search"></i>&nbsp;Find
                </button>
            </form>
        </div>
    </div>

    <div class="box box-info">
        <div class="box-body">
            <table id="items" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        {# sorting of properties based on query components #}
                        <th>ID</th>
                        <th>Username</th>
                        <th>Title</th>
                        <th>Seats</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Created', 'r.createdAt') }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for item in pagination %}
                    <tr>
                        <td>
                            {{ item.id }}
                        </td>
                        <td>
                            {{ item.user.username }}
                        </td>
                        <td>
                            {{ item.title }}
                        </td>
                        <td>
                            {{ item.seatsNumber }}
                        </td>
                        <td>
                            {% if item.type == 1 %}
                                Pojedinačno
                            {% endif %}
                            {% if item.type == 2 %}
                                Grupe
                            {% endif %}
                            {% if item.type == 3 %}
                                Studenti/đaci
                            {% endif %}
                            {% if item.type == 4 %}
                                Penzionerska
                            {% endif %}
                        </td>
                        <td>
                            {% if item.statusId == 1 %}
                                <span class="badge bg-light-blue">New</span>
                            {% endif %}
                        </td>
                        <td>
                            {{ item.createdAt|date('d.m.Y. H:i:s') }}
                        </td>
                        <td  class="pull-right">
                            <a href data-toggle="modal" data-target="#modal-danger" data-entity-id="{{ item.id }}" class="delete-btn"><i class="fa fa-trash"></i></a>&nbsp;
                            <a href="{{ path('show_reservation', { 'id': item.id }) }}"><i class="fa fa-print"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>

    <div class="modal modal-danger fade" id="modal-danger">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Confirmation</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure to delete this data ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-outline remove_item" data-entity-id="">Delete</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->

{% endblock %}

